---
import Image from 'astro/components/Image.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Fv from '../../components/section/Fv.astro';
import Layout from '../../layouts/Layout.astro';

const pointList = [
    {
        title: "自社の名刺となる\nWebサイトを持続的に",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/point_1.jpg",
        alt: "ポイント1"
    },
    {
        title: "魅力を伝える手段としての\n自社紹介映像",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/point_2.jpg",
        alt: "ポイント2"
    },
    {
        title: "採用も販売もSNSで\nより効果的に",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/point_3.jpg",
        alt: "ポイント3"
    },
        {
        title: "地方企業の\n最も大きな課題は採用",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/point_4.jpg",
        alt: "ポイント4"
    }
]

const trustList = [
    {
        label: "映像制作・営業",
        name: "奥山 健太郎",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/trust_1.jpg",
        alt: "奥山 健太郎"
    },
    {
        label: "Webサイト制作",
        name: "小森 脩平",
        description: "もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。",
        image: "/assets/images/feature/trust_2.jpg",
        alt: "小森 脩平"
    },
]
---

<Layout title="feature">
    <main>
        <!-- FV -->
        <div class="
            flex flex-col gap-28 w-defaultLayout m-auto mt-64
            md:w-full md:gap-16 md:mt-40
        ">
            <Breadcrumb
                lists={[
                    { name: "ホーム", path: "/" },
                    { name: "特長"}
                ]}
            />
            <Fv
                titleEn="Feature"
                titleJa="新庄プロダクトサービス\nの特長"
                description="もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。"
            />
        </div>
        <!-- INTRO -->
        <section class="
            grid grid-cols-2 gap-24 w-mdLayout m-auto mt-56
            md:grid-cols-1 md:gap-10 md:w-full md:-m-[1px] 
        ">
            <div class="
                py-4
                md:py-0 md:px-[1.6rem] md:order-2
            ">
                <h2 class="
                    mb-8 text-[2.6rem] font-mincho leading-relaxed
                    md:mb-6 md:text-[2rem] 
                ">
                    低価格で地方の中小企業のデジタル化を<br>
                    促進することで、<br>
                    人材不足や集客の課題を解決します。
                </h2>
                <p class="
                    text-[1.5rem] leading-loose
                    md:text-spDefaultText
                ">
                    もしあればここにそれを説明するテキストが入ってきますからね。
                    入れるようにしておきましょうね。
                    まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。
                </p>
            </div>
            <Image
                src="/assets/images/feature/intro.jpg"
                alt="イントロ"
                width={502}
                height={319.67}
                class="md:order-1"
            />
        </section>
        <!-- WORRIES -->
        <section class="
            flex flex-col items-center w-smLayout m-auto mt-56 p-20 border border-lineGray rounded-2xl
            md:w-auto md:mt-32 md:mx-[1.6rem] md:px-8 md:py-10
        ">
            <h2 class="
                w-full mb-16 pb-16 text-[2.4rem] text-center font-mincho border-b border-lineGray
                md:mb-8 md:pb-8 md:text-[1.8rem]
            ">
                こんなお悩みはありませんか？
            </h2>
            <ul class="
                grid grid-cols-2 gap-x-16 gap-y-6 text-[1.5rem]
                md:grid-cols-1 md:gap-y-5 md:text-[1.4rem]
            ">
                <li class="">
                    ・自社らしさがあるWebサイトが欲しいけど高い
                </li>
                <li class="">
                    ・自社の魅力的な見せ方がわからない
                </li>
                <li class="">
                    ・採用候補者に自社をわかりやすく伝えたい
                </li>
                <li class="">
                    ・今の時代SNSをやっていないと不安
                </li>
                <li class="">
                    ・採用候補者が集まらない
                </li>
                <li class="">
                    ・社内でデジタルに詳しい人材がいない
                </li>
            </ul>
        </section>
        <!-- POINT -->
        <section class="
            w-defaultLayout m-auto mt-56
            md:w-full md:mt-32
        ">
            <div class="flex flex-col items-center">
                <p class="
                    flex items-center gap-4 mb-10 text-[1.5rem] text-textGray 
                    before:content-[''] before:display before:w-3 before:h-3 before:bg-key before:rounded-full
                    md:mb-8 md:text-[1.3rem]
                ">
                    デジタル化に成功するための4つのポイント
                </p>
                <h2 class="
                    text-[3.2rem] font-mincho text-center leading-loose
                    md:text-[2.4rem] md:leading-relaxed
                ">
                    地方のデジタル課題の解決は<br class="hidden md:block">低コストで持続的に<br>
                    多角的なサポートが不可欠です
                </h2>
            </div>
            <div class="
                mt-24
                md:mt-16 md:px-[1.6rem]
            ">
                <ol class="
                    flex flex-col gap-12
                    md:gap-16
                ">
                    {pointList.map((point, index) => {
                        const isOdd = index % 2 === 1;
                        return  ( 
                            <li class="
                                grid grid-cols-2 items-center gap-32
                                md:grid-cols-1 md:gap-8
                            ">
                                <div class={`${isOdd ? "order-2" : "order-1"} md:px-[.8rem] md:order-2`}>
                                    <span class="text-[2em] text-key font-urbanist">
                                        0{index + 1}
                                    </span>
                                    <h3 class="
                                        mt-4 mb-12 text-[2.6rem] font-mincho whitespace-break-spaces leading-loose
                                        md:mt-2 md:mb-4 md:pb-6 md:text-[1.8rem] md:border-b md:border-lineGray
                                    ">{point.title}</h3>
                                    <p class="
                                        text-[1.5rem] leading-loose
                                        md:text-[1.3rem]
                                    ">
                                        {point.description}
                                    </p>
                                </div>
                                <Image 
                                    src={point.image}
                                    alt={point.alt}
                                    width={1040}
                                    height={680}
                                    class={`${isOdd ? "order-1" : "order-2"} w-full md:order-1`}
                                />
                            </li>
                        )
                    })}
                </ol>
            </div>
        </section>
        <!-- TRUST -->
        <section class="
            w-defaultLayout m-auto mt-56 mb-64
            md:w-full md:mt-32 md:mb-40 md:px-[1.6rem]
        ">
            <div class="
                relative flex
                md:flex-col
            ">
                <p class="
                    absolute top-4 flex items-center gap-4 mb-10 text-[1.5rem] text-textGray 
                    before:content-[''] before:display before:w-3 before:h-3 before:bg-key before:rounded-full
                    md:static md:mb-8 md:text-[1.3rem]
                ">
                    信頼の理由
                </p>
                <h2 class="
                    w-smLayout m-auto text-[3.6rem] font-mincho leading-relaxed
                    md:w-full md:text-[2.4rem] md:leading-relaxed
                ">
                    Webサイト ・ 映像制作業界での<br>
                    豊富な経験と丁寧な対応
                </h2>
            </div>
            <div class="
                w-smLayout m-auto mt-24
                md:w-full md:mt-14
            ">
                <ul class="
                    flex flex-col gap-16
                ">
                    {trustList.map((trust, index) => 
                        <li class="
                            grid grid-cols-2 gap-24
                            md:flex md:flex-col md:gap-10 md:items-center
                        ">
                            <div class="
                                py-6
                                md:p-0
                            ">
                                <span class="
                                    inline-block px-4 py-2 text-[1.2rem] font-normal border border-lineGray rounded-lg
                                    md:text-[1.1rem]
                                ">
                                    {trust.label}
                                </span>
                                <h3 class="
                                    mt-10 mb-8 text-[2.4rem] font-mincho
                                    md:mt-6 md:mb-4 md:text-[2rem]
                                ">
                                    {trust.name}
                                </h3>
                                <p class="
                                    text-[1.5rem] leading-loose
                                    md:text-spDefaultText
                                ">
                                    {trust.description}
                                </p>
                            </div>
                            <Image 
                                src={trust.image}
                                alt={trust.alt}
                                width={305}
                                height={420}
                                class="w-full md:w-[30rem]"
                            />
                        </li>
                    )}
                </ul>
            </div>
        </section>
    </main>
</Layout>