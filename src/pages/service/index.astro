const planList = [
    {
        name: "ベーシックプラン",
        description: "まずはWebサイトだけでも用意したい",
        price: "8,800",
        contensTitle: "すべてお任せあれ",
        contents: [
            "6ページ分のテンプレートWebサイト",
            "SSL(通信の暗号化)",
            "月5回程度の更新ご依頼",
