const flowList = [
    "お問い合わせ・ご連絡",
    "お伺いしてご要望を\nヒアリング",
    "お客様にあった\nプランごとのご対応",
]
---

<Layout title="service">
    <main>
        <!-- FV -->
        <div class="
            flex flex-col gap-28 w-defaultLayout m-auto mt-64
            md:w-full md:gap-16 md:mt-40
        ">
            <Breadcrumb
                lists={[
                    { name: "ホーム", path: "/" },
                    { name: "サービス"}
                ]}
            />
            <Fv
                titleEn="Service"
                titleJa="ご提供サービス"
                description="もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。"
            />
        </div>
        <!-- INTRO -->
        <section class="
            mt-48
            md:mt-16
        ">
            <div class="
                w-mdLayout m-auto
                md:w-full md:px-[1.6rem]
            ">
                <h2 class="
                    mb-8 text-[3.2rem] font-mincho leading-relaxed
                    md:mb-6 md:text-[2rem]
                ">
                    デジタル課題を解決する<br>
                    多面的なコンテンツと手法を提供します。
                </h2>
                <p class="
                    text-[1.5rem] leading-loose
                    md:text-spDefaultText
                ">
                    もしあればここにそれを説明するテキストが入ってきますからね。<br>
                    入れるようにしておきましょうね。<br>
                    まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。
                </p>
            </div>
            <Image
                src="/assets/images/service/intro.jpg"
                alt="サービスの紹介画像"
                width={1440}
                height={480}
                class="w-full h-[48rem] mt-24 aspect-auto object-cover md:h-[24rem] md:mt-12"
            />
        </section>
        <!-- SERVICE -->
        <section class="
            w-defaultLayout m-auto mt-56
            md:w-full md:px-[1.6rem] md:mt-32
        ">
            <h2 class="
                mb-12 text-[2.8rem] font-mincho
                md:mb-8 md:text-[2.2rem]
            ">
                デジタル化の支援
            </h2>
            <div class="">
                <ul class="
                    grid grid-cols-4 gap-8
                    md:grid-cols-1 md:gap-10
                ">
                    {serviceList.map((service) =>
                    <li class="">
                        <Image
                            src={service.image}
                            alt={service.alt}
                            width={305}
                            height={200}
                            class="w-full h-[20rem] object-cover"
                        />
                        <div class="
                            mt-8
                            md:mt-6
                        ">
                            <h3 class="
                                mb-2 text-[1.7rem] font-mincho
                                md:mb-3
                            ">
                                {service.title}
                            </h3>
                            <p class="text-[1.3rem] leading-relaxed">
                                {service.description}
                            </p>
                        </div>
                    </li>
                    )}
                </ul>
            </div>
        </section>
        <!-- PRICE -->
        <section class="
            grid grid-cols-[1fr_auto] gap-32 items-end w-defaultLayout m-auto mt-56
            md:grid-cols-1 md:gap-10 md:mt-32 md:w-full md:px-[1.6rem]
        ">
            <div class="">
                <h2 class="
                    mb-8 text-[3.2rem] font-mincho
                    md:text-[2rem] md:mb-4
                ">
                    基本料金
                </h2>
                <p class="
                    text-defaultText
                    md:text-spDefaultText
                ">
                    もしあればここにそれを説明するテキストが入ってきますからね。
                    入れるようにしておきましょうね。
                    まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。
                </p>
            </div>
            <div class="
                flex gap-8 items-center
                md:gap-4
            ">
                <div class="
                    flex flex-col items-center justify-between min-w-[22rem] min-h-48 p-10 border border-lineGray rounded-xl
                    md:w-full md:min-w-36 md:min-h-32 md:p-6 md:text-center
                ">
                    <h3 class="
                        mb-4 text-[1.4rem]
                        md:mb-2 md:text-[1.2rem]
                    ">
                        月額費用
                    </h3>
                    <p class="
                        text-[1.8rem] font-medium
                        md:text-[1.4rem]
                    ">
                        プランごとの料金
                    </p>
                </div>
                <Image 
                    src="/assets/icon/plus.svg"
                    alt="プラスアイコン"
                    width={16}
                    height={16}
                    class="w-6 h-6"
                />
                <div class="
                    flex flex-col items-center min-w-[22rem] min-h-48 p-10 text-key border border-key rounded-xl
                    md:w-full md:min-w-36 md:h-full md:min-h-32 md:p-6 md:text-center
                ">
                    <h3 class="
                        mb-4 text-[1.4rem]
                        md:mb-2 md:text-[1.2rem]
                    ">
                        初期費用
                    </h3>
                    <p class="flex items-end gap-2">
                        <span class="
                            text-[2.8rem] font-urbanist font-light leading-tight
                            md:text-[2.2rem]
                        ">
                            0
                        </span>
                        <span class="text-[1.2rem] font-normal leading-loose">
                            円
                        </span>
                    </p>
                </div>
                <Image 
                    src="/assets/icon/plus.svg"
                    alt="プラスアイコン"
                    width={16}
                    height={16}
                    class="w-6 h-6"
                />
                 <div class="
                    flex flex-col items-center min-w-[22rem] min-h-48 p-10 text-key border border-key rounded-xl
                    md:w-full md:min-w-36 md:h-full md:min-h-32 md:p-6 md:text-center
                ">
                    <h3 class="
                        mb-4 text-[1.4rem]
                        md:mb-2 md:text-[1.2rem]
                    ">
                        解約費用
                    </h3>
                    <p class="flex items-end gap-2">
                        <span class="
                            text-[2.8rem] font-urbanist font-light leading-tight
                            md:text-[2.2rem]
                        ">
                            0
                        </span>
                        <span class="text-[1.2rem] font-normal leading-loose">
                            円
                        </span>
                    </p>
                </div>
            </div>
        </section>
        <!-- PLAN -->
        <section class="
            w-mdLayout m-auto mt-56
            md:w-full md:px-[1.6rem] md:mt-32
        ">
            <div class="
                grid grid-cols-[auto_1fr] gap-40 items-end
                md:grid-cols-1 md:gap-4 md:mt-32
            ">
                <h2 class="
                    text-[3.2rem] font-mincho leading-relaxed
                    md:text-[2.2rem]
                ">
                    デジタルコンテンツ<br>
                    月額定額プラン
                </h2>
                <p class="
                    text-defaultText
                    md:text-spDefaultText
                ">
                    制作費無料で、かかるのは月々の更新費用のみです。<br>
                    自社の課題にぴったりなプランをご提供させていただきます。
                </p>
            </div>
            <ul class="
                grid grid-cols-3 gap-8 mt-20
                md:grid-cols-1 md:mt-10
            ">
                {planList.map((plan) =>
                    <li class="
                        grid grid-rows-[auto_1fr_auto] items-center justify-between gap-10 p-12 border border-lineGray rounded-2xl
                        md:grid-cols-1 md:gap-8
                    ">
                        <div class="h-full">
                            <h3 class="
                                mb-8 text-[2.2rem] font-medium text-center
                                md:text-[2rem]
                            ">
                                {plan.name}
                            </h3>
                            <p class="
                                mb-6 text-[1.4rem] text-center
                                md:mb-5 md:text-[1.3rem]
                            ">
                                {plan.description}
                            </p>
                            <p class="flex justify-center items-end gap-4">
                                <span class="text-[2.4rem] font-urbanist font-medium leading-tight">
                                    {plan.price}
                                </span>
                                <span class="text-[1.3rem] leading-loose">
                                    円 / 月 〜
                                </span>
                            </p>
                        </div>
                        <div class="flex flex-col items-center h-full px-12 py-6 border border-lineGray rounded-xl">
                            <h4 class="mb-4 text-[1.4rem] font-medium">
                                {plan.contensTitle}
                            </h4>
                            <ul class="flex flex-col gap-3">
                                {plan.contents.map((content) =>
                                    <li class="text-[1.3rem] leading-relaxed list-disc list-outside">
                                        {content}
                                    </li>
                                )}
                            </ul>
                        </div>
                        <a 
                            href="/contact" 
                            class="flex justify-center w-full p-5 text-[1.3rem] text-white font-normal bg-key rounded-full">
                            申し込む
                        </a>
                    </li>
                )}
            </ul>
        </section>
        <!-- FAQ -->
        <section class="
            grid grid-cols-[auto_1fr] gap-24 justify-between w-defaultLayout m-auto mt-56 pl-[10.8rem]
            md:grid-cols-1 md:gap-12 md:mt-32 md:w-full md:px-[1.6rem]
        ">
            <div class="
                w-[36rem] py-2
                md:w-full md:p-0
            ">
                <h2 class="
                    mb-10 text-sectionTitle font-mincho
                    md:mb-4 md:text-[2.2rem]
                ">
                    よくあるご質問
                </h2>
                <p class="
                    text-defaultText
                    md:text-spDefaultText
                ">
                    皆様からよくいただくご質問をまとめています。
                </p>
            </div>
            <div class="">
                <ul class="
                    flex flex-col gap-16
                    md:gap-10
                ">
                    {faqList.map((faq, index) => 
                        <FaqItem
                            index={index}
                            question={faq.question}
                            answer={faq.answer}
                        />
                    )}
                </ul>
            </div>
        </section>
        <!-- FLOW -->
        <section class="
            w-mdLayout m-auto mt-56 mb-64
            md:w-full md:px-[1.6rem] md:mt-32 md:mb-40
        ">
            <div class="
                w-[40rem]
                md:w-full
            ">
                <h2 class="
                    mb-8 text-sectionTitle font-mincho
                    md:mb-4 md:text-[2.2rem]
                ">
                    ご利用までの流れ
                </h2>
                <p class="
                    text-defaultText
                    md:text-spDefaultText
                ">
                    寄り添いながら制作から納品まで丁寧にご対応をさせていただきます。
                </p>
            </div>
            <div class="
                mt-16
                md:mt-10 md:overflow-x-scroll
            ">
                <div class="
                    flex gap-12
                    md:gap-8 md:w-fit
                ">
                    {flowList.map((flow, index) => 
                    <>
                        <div class="
                            flex justify-center items-center w-full aspect-square border border-lineGray rounded-full
                            md:w-96
                        ">
                            <span class="
                                text-[1.5rem] text-center leading-loose whitespace-break-spaces
                                md:text-[1.3rem]
                            ">
                                {flow}
                            </span>
                        </div>
                        {index !== flowList.length - 1 && (
                            <Image
                                src="/assets/icon/arrow.svg"
                                alt="矢印"
                                width={10}
                                height={16.19}
                                class="w-24 md:w-10"
                            />
                        )}
                    </>
                    )}
                </div>
            </div>
        </section>
    </main>
</Layout>