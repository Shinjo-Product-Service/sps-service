        ]
    },
    {
        name: "スタンダードプラン",
        description: "自社のオリジナリティをアピール・発信",
        price: "22,000",
        contensTitle: "ベーシックプランに加えて",
        contents: [
            "個別オリジナルデザインWebサイト",
            "SNS運用代行",
        ]
    },
    {
