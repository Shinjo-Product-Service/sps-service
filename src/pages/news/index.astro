---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Fv from '../../components/section/Fv.astro';
import NewsItem from '../../components/news/NewsItem.astro';
---

<Layout title="news">
    <main>
        <!-- FV -->
        <div class="
            flex flex-col gap-28 w-defaultLayout m-auto mt-64
            md:w-full md:gap-16 md:mt-40
        ">
            <Breadcrumb
                lists={[
                    { name: "ホーム", path: "/" },
                    { name: "お知らせ"}
                ]}
            />
            <Fv
                titleEn="News"
                titleJa="お知らせ"
                description="もしあればここにそれを説明するテキストが入ってきますからね。入れるようにしておきましょうね。まあ何が入ってくるのかは全然わからないのですけれども、あればいいですね。"
            />
        </div>
        <!-- MAIN -->
        <div class="
            w-mdLayout m-auto mt-24 mb-64
            md:w-full md:mt-0 md:mb-40 md:px-[1.6rem]
        ">
            <ul class="">
                <li class="">
                    <NewsItem />
                </li>
                <li class="">
                    <NewsItem />
                </li>
                <li class="">
                    <NewsItem />
                </li>
                <li class="">
                    <NewsItem />
                </li>
                <li class="">
                    <NewsItem />
                </li>
            </ul>
        </div>
    </main>
</Layout>