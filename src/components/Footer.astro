---
import Image from "astro/components/Image.astro";

const {pathname} = Astro.url

const menu = [
    {
        name: 'ホーム',
        url: '/'
    },
    {
        name: '特長',
        url: '/feature'
    },
    {
        name: 'サービス',
        url: '/service'
    },
    {
        name: "実績",
        url: '/works'
    },
    {
        name: 'よくある質問',
        url: '/faq'
    },
    {
        name: "お知らせ",
        url: '/news'
    }
]
---

<footer class="
    grid grid-cols-[auto_auto] justify-between w-full pt-16 pb-20 border-t border-lineGray
    md:grid-cols-1 md:gap-10 md:w-full md:px-[1.6rem] md:pt-10 md:pb-20 md:border-t-0
">
    <div class="
        flex flex-col gap-12
        md:order-2 md:gap-5
    ">
        <a href="/" class="inline-block">
            <Image 
                src="/logo.svg" 
                alt="Logo" 
                width={112} 
                height={66} 
                class="w-[7rem] h-[4.125rem]" />
        </a>
        <small class="
            text-xs text-gray text-light
            md:text-[1.1rem]
        ">
            ©新庄プロダクトサービス. All Rights Reserved.
        </small>
    </div>
    <nav class="md:order-1">
        <ul class="
            flex
            md:flex-col
        ">
            {menu.map((item) => (
                <li class="">
                    <a href={item.url} class={`
                        inline-block px-8 py-2 text-sm ${pathname === item.url && "text-key"}
                        md:px-0 md:py-4
                    `}>
                        {item.name}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</footer>