---
import Image from 'astro/components/Image.astro'

interface Props {
  href: string
  text: string
}

const {href, text} = Astro.props
---

<a href={href} class="inline-flex items-center gap-5 w-fit">
    <span class="
        text-[1rem] underline underline-offset-1
        md:text-[1.4rem]
    ">
        {text}
    </span>
    <div class="
        flex justify-center items-center w-12 h-12 border border-lineGray rounded-full
        md:w-[4rem] md:h-[4rem]
    ">
        <Image 
            src="/assets/icon/arrow.svg" 
            alt="arrow" 
            width={16} 
            height={16.19} 
            class="w-4 md:w-6" 
        />
    </div>
</a>