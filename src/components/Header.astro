---
import Image from "astro/components/Image.astro";
import menu from "../data/menu.json";

const {type} = Astro.props
const {pathname} = Astro.url
---

<header class="
    absolute top-0 left-0 grid grid-cols-[auto_1fr_auto] items-center w-full px-20 py-10
    md:flex justify-between md:px-[1.6rem] md:py-[1.2rem]
">
    <a href="/" class="">
        <Image
            src="/logo.svg"
            alt="Logo"
            width="112"
            height="66"
            loading={"eager"}
            class="w-[7rem] h-[4.125rem]"
        />
    </a>
    {!type &&
        <nav class="
            h-full
            md:hidden
        ">
            <ul class="flex justify-center h-full">
                {menu.map((item) => (
                    <li class="">
                        <a href={item.url} class={`flex justify-center items-center h-full px-8 py-2 text-sm ${pathname === item.url && "text-key"}`}>{item.name}</a>
                    </li>
                ))}
            </ul>
        </nav>
        <a href="/contact" 
           class="
            px-8 py-3 text-sm text-key leading-relaxed border border-key rounded-full
            md:w-fit md:px-6 md:py-3 md:text-[1.2rem]
        ">お問い合わせ</a>
    }
</header>