---
const {id, title, label} = Astro.props
---

<a 
    href={`/news/${id}`} 
    class="
        grid grid-cols-[auto_1fr] items-center py-12 border-b border-lineGray
        md:grid-cols-1 md:py-6 md:px-[.8rem]
    "
>
    <div class="
        flex items-center gap-8 mr-12
        md:gap-6 md:mr-0 md:mb-4
    ">
        <time 
            datetime="2024-04-04" 
            class="
                text-[1.4rem] text-gray font-urbanist font-light
                md:text-[1.3rem]
            ">
            2024.04.04
        </time>
        <span class="
            inline-flex justify-center w-32 px-4 py-2 text-[1.2rem] leading-tight text-key border border-key rounded-md bg-key bg-opacity-10
            md:w-fit md:px-3 md:py-2 md:text-[1rem]
        ">
            { label }
        </span>
    </div>
    <p class="text-[1.4rem] leading-relaxed">
        {title}
    </p>
</a>